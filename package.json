{
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "build": "npm run build -ws",
    "prepare": "husky install"
  },
  "devDependencies": {
    "husky": "^7.0.1",
    "import-sort-style-module": "^6.0.0",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "prettier-plugin-import-sort": "^0.0.7"
  },
  "prettier": {
    "printWidth": 100
  },
  "importSort": {
    ".ts, .js, .mjs, .cjs": {
      "style": "module",
      "parser": "typescript"
    }
  },
  "lint-staged": {
    "*.{ts,js,mjs,cjs}": "prettier --write"
  },
  "jest": {
    "projects": [
      "<rootDir>/packages/*"
    ]
  }
}
